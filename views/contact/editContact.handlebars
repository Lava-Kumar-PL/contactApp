<div class="list editConn">
  <h1>Edit contact</h1>

  {{#if editcontact}}
    <form action="/contact/edit/{{editcontact._id}}" method="post">
      <label for="firstName">First Name:</label>
      <input type="text" id="firstName" name="firstName" value='{{editcontact.firstName}}' required />
      <br /><br />

      <label for="lastName">Last Name:</label>
      <input type="text" id="lastName" name="lastName" value="{{editcontact.lastName}}"  required />
      <br /><br />

      <label for="email">Email:</label>
      <input type="email" id="email" name="email" value="{{editcontact.email}}"  required />
      <br /><br />

      <label for="phoneNumber">Phone Number:</label>
      <input type="tel" id="phoneNumber" name="phoneNumber" value="{{editcontact.phoneNumber}}"  required />
      <br /><br />

      <label for="address">Address:</label>
      <input type="text" id="address" value="{{editcontact.address}}"  name="address" />
      <br /><br />

      <button type="submit">edit Contact</button>
      <br /><br />
    </form>
  {{/if}}
</div>